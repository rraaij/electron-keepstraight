{
  "name": "angular2-electron-starter",
  "version": "0.3.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "ng serve",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "jest --config test/jest.json",
    "test:watch": "jest --watch",
    "build": "ng build && cp -R src/public dist/public",
    "prepare": "cp -a electron/. dist",
    "electron": "npm run prepare && electron dist",
    "package": "npm run build && npm run prepare && ./node_modules/electron-packager/cli.js dist App --platform=darwin --arch=all --out=dist-app --overwrite"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "~2.4.2",
    "@angular/compiler": "~2.4.2",
    "@angular/compiler-cli": "~2.4.2",
    "@angular/core": "~2.4.2",
    "@angular/forms": "~2.4.2",
    "@angular/http": "~2.4.2",
    "@angular/platform-browser": "~2.4.2",
    "@angular/platform-browser-dynamic": "~2.4.2",
    "@angular/router": "~3.4.2",
    "@angular/tsc-wrapped": "~0.5.0",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.0.3",
    "ts-helpers": "^1.1.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/jest": "^16.0.3",
    "@types/node": "^6.0.42",
    "chai": "^3.5.0",
    "codelyzer": "~2.0.0-beta.4",
    "electron": "^1.4.4",
    "electron-packager": "^8.1.0",
    "jest": "^18.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.3.1",
    "typescript": "~2.1.4"
  }
}
